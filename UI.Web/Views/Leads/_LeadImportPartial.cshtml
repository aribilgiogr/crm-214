<!-- Modal -->
<div class="modal fade" id="leadsImporter" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="leadsImporterLabel" aria-hidden="true">
    <div class="modal-dialog">
        @*
        enctype="multipart/form-data": Bu özellik html formlarının dosya kabul etmesini sağlar, bu olmazsa dosya null değer verir.
        *@
        <form asp-action="import" class="modal-content" method="post" enctype="multipart/form-data">
            <div class="modal-header">
                <h5 class="modal-title" id="leadsImporterLabel">Import Leads from File</h5>
            </div>
            <div class="modal-body">
                <label for="file" class="form-label">Select a file:</label>
                <input class="form-control form-control-lg mb-2" id="file" name="file" type="file">
                <small class="text-muted">* Only .csv, .json and .xlsx file extensions accepted!</small>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Upload</button>
            </div>
        </form>
    </div>
</div>